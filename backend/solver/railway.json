{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "backend/solver/Dockerfile",
    "watchPatterns": [
      "backend/solver/**",
      "backend/wordlist-parser/wordlist.txt"
    ]
  },
  "deploy": {
    "startCommand": "./build/solver-server ./wordlist.txt",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
